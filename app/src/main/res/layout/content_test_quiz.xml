<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_test_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alfredo.senapp.testQuiz"
    tools:showIn="@layout/activity_test_quiz"
    android:weightSum="1">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar3"
            android:max="100"
            android:progressTint="#8A2ADA"
            android:layout_weight="0.00" />

        <TextView
            android:text="Puntaje: 0"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/score"
            android:paddingBottom="5dp"
            android:layout_weight="0.08" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:paddingTop="10dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/abrazar"
            android:id="@+id/gifQuiz" />

        <Button
            android:text="Opcion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="61dp"
            android:id="@+id/btnOpt1"
            android:layout_below="@+id/textView"
            android:background="@color/colorMorado"
            android:textColor="@color/colorBlanco"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"/>

        <Button
            android:text="Opcion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnOpt2"
            android:layout_above="@+id/btnOpt3"
            android:background="@color/colorMorado"
            android:textColor="@color/colorBlanco"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"/>

        <Button
            android:text="Opcion3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnOpt3"
            android:layout_above="@+id/btnOpt4"
            android:background="@color/colorMorado"
            android:textColor="@color/colorBlanco"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"/>

        <Button
            android:text="Opcion4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnOpt4"
            android:layout_marginBottom="5dp"
            android:background="@color/colorMorado"
            android:textColor="@color/colorBlanco"
            android:layout_alignParentBottom="true"

            android:layout_alignParentStart="true" />
    </LinearLayout>



</RelativeLayout>
