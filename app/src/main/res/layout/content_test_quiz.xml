<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_test_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alfredo.senapp.testQuiz"
    tools:showIn="@layout/activity_test_quiz"
    android:weightSum="1">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="Puntaje: 0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/score"
            android:paddingBottom="5dp"
            android:layout_weight="0.15" />

        <TextView
            android:text="time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timer"
            android:layout_weight="0.15" />

        <TextView
            android:text="New Quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/descripcion"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="31dp"
            android:layout_weight="0.15" />
        <!--
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            app:srcCompat="@drawable/account"
            android:id="@+id/imageView"
            android:layout_above="@+id/btnOpt2"
            android:layout_centerHorizontal="true" /> -->

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/luffy"
            />

        <Button
            android:text="Opcion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="61dp"
            android:id="@+id/btnOpt1"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Opcion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnOpt2"
            android:layout_above="@+id/btnOpt3"
            android:layout_alignParentStart="true" />
        <Button
            android:text="Opcion3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnOpt3"
            android:layout_above="@+id/btnOpt4"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Opcion4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnOpt4"
            android:layout_marginBottom="17dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>



</RelativeLayout>
