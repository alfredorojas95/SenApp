<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_bienvenida">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="34sp"
        android:layout_gravity="top"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

    <ImageButton
        android:layout_width="140px"
        android:layout_height="140px"
        app:srcCompat="@drawable/profesiones"
        android:id="@+id/btn_profesion"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_alignTop="@+id/btn_calendar"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:text="Intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:layout_below="@+id/btn_intro"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="140px"
        android:layout_height="140px"
        app:srcCompat="@drawable/calendar"
        android:scaleType="fitXY"
        android:id="@+id/btn_calendar"
        android:background="@null"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView4"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:text="Tiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:layout_below="@+id/btn_calendar"
        android:layout_toStartOf="@+id/btn_intro" />

    <TextView
        android:text="Transporte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignStart="@+id/btn_profesion" />

    <ImageButton
        android:layout_width="140px"
        android:layout_height="140px"
        app:srcCompat="@drawable/feets"
        android:id="@+id/btn_intro"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_marginTop="18dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="140px"
        android:layout_height="140px"
        app:srcCompat="@drawable/family"
        android:scaleType="fitXY"
        android:background="@null"
        android:id="@+id/btn_family"
        android:layout_below="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginTop="56dp" />

    <TextView
        android:text="Familia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="18sp"
        android:layout_below="@+id/btn_family"
        android:layout_alignStart="@+id/textView5" />

    <ImageButton
        android:layout_width="140px"
        android:layout_height="140px"
        app:srcCompat="@drawable/bike"
        android:scaleType="fitXY"
        android:background="@null"
        android:id="@+id/btn_transport"
        android:layout_above="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:text="Profesiones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="18sp"
        android:layout_below="@+id/btn_profesion"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:text="00/40"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2" />

    <TextView
        android:text="00/40"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView5"
        android:layout_toStartOf="@+id/btn_goQuiz" />

    <TextView
        android:text="00/40"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView6"
        android:layout_toEndOf="@+id/btn_intro" />

    <TextView
        android:text="20/40"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView8"
        android:layout_toStartOf="@+id/btn_goQuiz" />

    <TextView
        android:text="10/40"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView10" />

    <Button
        android:text="Go Quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_goQuiz"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />


</RelativeLayout>